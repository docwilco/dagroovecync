{
    "manifest_version": 2,
    "name": "DaGrooveCync",
    "version": "0.1.1",
    "description": "Groove with your friends: sync up listening to the same stuff on YouTube, MixCloud, and SoundCloud.",
    "permissions": [
        "tabs",
        "clipboardWrite",
        "declarativeContent",
        "https://*.youtube.com/*",
        "https://*.soundcloud.com/*",
        "https://*.mixcloud.com/*"
    ],
    "icons": {
        "16": "icons/dgc-16.png",
        "48": "icons/dgc-48.png",
        "128": "icons/dgc-128.png"
    },
    "background": {
        "scripts": [
            "browser-polyfill.js",
            "dagroovecync.js"
        ]
    },
    "page_action": {
        "default_icon": {
            "16": "icons/dgc-16.png",
            "48": "icons/dgc-48.png",
            "128": "icons/dgc-128.png"
        },
        "default_title": "DaGrooveSync",
        "show_matches": ["https://*.youtube.com/*", "https://*.soundcloud.com/*", "https://*.mixcloud.com/*"]
    }
}